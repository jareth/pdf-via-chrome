<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console Appender for Tests -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Application loggers (change to DEBUG for detailed troubleshooting) -->
    <logger name="com.fostermoore.pdfviachrome" level="INFO"/>

    <!-- CDP library logging (can be very verbose) -->
    <logger name="com.github.kklisura.cdt" level="WARN"/>
    <logger name="io.fluidsonic.mirror" level="WARN"/>

    <!-- Testcontainers logging -->
    <logger name="org.testcontainers" level="INFO"/>
    <logger name="com.github.dockerjava" level="WARN"/>
    <logger name="tc" level="INFO"/>

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>
